<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefWidth="450.0" styleClass="vbox-window" stylesheets="@../resources/SecondaryWindows-view.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FXMLAsignaturaController">
   <children>
      <Label fx:id="title" text="Añadir asignatura">
         <font>
            <Font size="30.0" />
         </font>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </Label>
      <VBox>
         <children>
            <Label text="Código">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="codigoBox" maxWidth="1.7976931348623157E308" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Nombre de asignatura">
               <font>
                  <Font size="15.0" />
               </font></Label>
            <TextField fx:id="nombreBox" maxWidth="1.7976931348623157E308" />
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="15.0">
         <children>
            <HBox HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="errorLabel" textFill="RED">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="button-transparent" text="Cancelar">
               <font>
                  <Font size="15.0" />
               </font></Button>
            <Button fx:id="createButton" mnemonicParsing="false" styleClass="button-transparent" text="Añadir">
               <font>
                  <Font size="15.0" />
               </font></Button>
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
