<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.FXMLAsignaturaController">
   <children>
      <HBox>
         <children>
            <Label text="Añadir asignatura">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Region prefHeight="75.0" prefWidth="125.0" />
            <StackPane />
         </children>
      </HBox>
      <HBox spacing="15.0">
         <children>
            <VBox>
               <children>
                  <Label text="Código" />
                  <TextField fx:id="codigoBox" maxWidth="-Infinity" prefHeight="25.0" prefWidth="150.0" />
               </children>
            </VBox>
            <VBox />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </HBox>
      <VBox>
         <children>
            <Label text="Nombre de asignatura" />
            <TextField fx:id="nombreBox" maxWidth="-Infinity" prefWidth="415.0" />
         </children>
      </VBox>
      <HBox alignment="CENTER_RIGHT" spacing="15.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancelar" />
            <Button fx:id="createButton" mnemonicParsing="false" text="Añadir" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
